  <script>
    function detectDevice() {
      let ua = navigator.userAgent;
      let os = "Không xác định";
      let device = "Không rõ thiết bị";

      if (/iPhone/i.test(ua)) {
          os = "iOS";
          let version = ua.match(/OS (\d+_\d+(?:_\d+)?)/i);
          if (version) os += " " + version[1].replace(/_/g, ".");
          device = "iPhone";
      } 
      else if (/iPad/i.test(ua)) {
          os = "iPadOS";
          device = "iPad";
      }
      else if (/Android/i.test(ua)) {
          let version = ua.match(/Android\s([0-9\.]+)/i);
          os = version ? "Android " + version[1] : "Android";
          let model = ua.match(/; ([^;]*?) Build/i);
          device = model ? model[1].trim() : "Thiết bị Android";
      }
      else if (/Windows/i.test(ua)) {
          os = "Windows"; device = "Máy tính";
      } 
      else if (/Mac OS X/i.test(ua)) {
          if (navigator.maxTouchPoints > 1) { os = "iPadOS"; device = "iPad"; }
          else { os = "macOS"; device = "MacBook / iMac"; }
      }
      else if (/Linux/i.test(ua)) {
          os = "Linux"; device = "Máy tính";
      }

      document.getElementById("device-info").innerHTML = 
          "<b>" + device + "</b> - <b>" + os + "</b>";
    }
    window.onload = detectDevice;
  </script>
</head>
