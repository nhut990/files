  <!-- ================= Script autoplay playlist + radio ================= -->
  <script>
    const audios = document.querySelectorAll("audio:not([id^='radio'])");

    audios.forEach((a, index) => {
      a.addEventListener("play", () => {
        audios.forEach(other => { if (other !== a) other.pause(); });
        document.querySelectorAll("audio[id^='radio']").forEach(r => r.pause());
      });

      a.addEventListener("ended", () => {
        if (index + 1 < audios.length) {
          audios[index + 1].play();
        }
      });
    });

    function playRadio(radioId, boxId, btn) {
      const radio = document.getElementById(radioId);
      const radioBox = document.getElementById(boxId);

      const playSym = String.fromCodePoint(0x25B6); // ▶
      const stopSym = String.fromCodePoint(0x23F9); // ⏹

      if (radio.paused) {
        document.querySelectorAll("audio[id^='radio']").forEach(r => {
          if (r !== radio) {
            r.pause();
            r.parentElement.classList.remove('playing');
            r.previousElementSibling.textContent = playSym + " Nghe Radio";
          }
        });

        radio.play().then(() => {
          radioBox.classList.add('playing');
          btn.textContent = stopSym + " Dừng Radio";
          audios.forEach(a => a.pause());
        }).catch(err => {
          console.log("Không thể play radio:", err);
          btn.textContent = playSym + " Nghe Radio";
        });
      } else {
        radio.pause();
        radioBox.classList.remove('playing');
        btn.textContent = playSym + " Nghe Radio";
      }
    }
  </script>
